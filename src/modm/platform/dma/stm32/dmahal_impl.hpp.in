void
modm::platform::DmaHal{{ id }}::enable()
{
%% if target["family"] == "f4"
	RCC->AHB1ENR  |= RCC_AHB1ENR_DMA{{ id }}EN;
	RCC->AHB1RSTR |=  RCC_AHB1RSTR_DMA{{ id }}RST;
	RCC->AHB1RSTR &= ~RCC_AHB1RSTR_DMA{{ id }}RST;
%% elif target["family"] == "f3"
	RCC->AHBENR  |= RCC_AHBENR_DMA{{ id }}EN;
%% endif
}

void
modm::platform::DmaHal{{ id }}::disable()
{
%% if target["family"] == "f4"
	RCC->AHB1ENR &= ~RCC_AHB1ENR_DMA{{ id }}EN;
%% elif target["family"] == "f3"
	RCC->AHBENR &= ~RCC_AHBENR_DMA{{ id }}EN;
%% endif

}


