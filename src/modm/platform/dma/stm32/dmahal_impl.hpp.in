void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::stop()
{
	{{ reg }} &= ~{{ prefix}}_EN;
	while({{ reg }} & {{ prefix }}_EN); // wait for slot to be stopped
}

void
