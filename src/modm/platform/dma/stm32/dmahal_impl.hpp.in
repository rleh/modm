	{{ mem }} = reinterpret_cast<uint32_t>(memory);
	{{ per }} = reinterpret_cast<uint32_t>(peripheral);
	{{ reg }} = ({{ reg }} & ~DataTransferDirectionMask) | static_cast<uint32_t>(DataTransferDirection::PeripheralToMemory):
}
