void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::stop()
{
%% if target["family"] == "f4"
	{{ reg }} &= ~DMA_SxCR_EN;
	while({{ reg }} & DMA_SxCR_EN); // wait for slot to be stopped
%% else
	{{ reg }} &= ~DMA_CCR_EN;
	while({{ reg }} & DMA_CCR_EN); // wait for slot to be stopped
%% endif
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::start()
{
%% if target["family"] == "f4"
	{{ reg }} |= DMA_SxCR_EN;
%% else
	// clear interrupt flags
	DMA{{ id }}->ISR |= DMA_ISR_TEIF{{ slot_id }} |
						DMA_ISR_TCIF{{ slot_id }} |
						DMA_ISR_HTIF{{ slot_id }} |
						DMA_ISR_GIF{{ slot_id }};
	{{ reg }} |= DMA_CCR_EN;
%% endif
}

bool
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::isFinished()
{
%% if target["family"] == "f4"
	return !({{ reg }} & DMA_SxCR_EN);
%% else
	return (DMA{{ id }}->ISR & DMA_ISR_TCIF{{ slot_id }});
%% endif
}


